
@{
    ViewData["Title"] = "ConfirmacaoEmailAsync";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <section class="row justify-content-center">
        <div class="col-12 col-sm-10 col-lg-8">
            <div class="card mt-4 ml-auto mr-auto">
                <div class="card-header bg-white">
                    <h3><i class="fas fa-sign text-success"></i> Sucesso</h3>
                </div>
                <div class="card-body">
                    <p>E-mail confirmado com sucesso, faça o login para acessar sua conta!</p>
                    <a class="btn btn-success font-weight-bold" asp-area="Login" asp-controller="Login" asp-action="Logar">Fazer Login</a>
                </div>
            </div>
        </div>
    </section>
</div>

