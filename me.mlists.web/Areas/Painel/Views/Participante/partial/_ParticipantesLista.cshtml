@model ParticipanteFormViewModel

<div class="modal remove-hide fade" id="nova-lista-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-secondary"><i class="fas fa-clipboard-list"></i> Participantes:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Model.participantes.Count() > 0)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var participante in Model.participantes)
                        {
                            <li class="list-group-item d-flex  justify-content-between bd-highlight p-1">
                                <p class="m-0 align-self-center">@participante.User.Nome</p>
                                <form class="align-self-center" asp-area="Painel" asp-controller="Participante" asp-action="UpdateParticipante">
                                    <input type="hidden" name="ParticipanteId" value="@participante.Id"/>
                                    <div class="form-group m-0">
                                        <select class="form-control"
                                                 onchange="participante.alterarParticipante(this)" 
                                                name="ParticipantePerfil" 
                                                asp-for="@participante.ParticipantePerfil" 
                                                asp-items="Html.GetEnumSelectList<me.mlists.domain.Enums.ParticipantePerfilEnum>()">
                                        </select>
                                    </div>
                                </form>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>