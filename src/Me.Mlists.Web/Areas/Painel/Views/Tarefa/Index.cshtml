@model Me.Mlists.Models.Lista
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/jquery-serializeObject.js"></script>
    <script src="~/js/services/AjaxService.js"></script>
    <script src="~/js/services/MensagemService.js"></script>
    <script src="~/js/lista.js"></script>
    <script src="~/js/tarefa.js"></script>
    <script src="~/js/convidado.js"></script>
}

<article class="container mt-3">
    <div class="tarefas card" data-lista-id="@Model.Id">
        <partial name="partial/_HeaderListaTarefas"/>
        <section class="card-body">
            <div class="breadcrumb m-0">
                <div class="breadcrumb-item d-flex w-100 justify-content-between">
                    <div class="align-self-center">
                        <p class="m-0">Geral</p>
                    </div>
                    <button type="button" class="btn btn-info btn-sm" onclick="tarefa.getFormModal('@Url.Action("InsertTarefa","Tarefa", new { area = "Painel", listaId = Model.Id })')">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <ul class="list-group list-group-flush d-flex flex-wrap">
                @foreach (var tarefa in Model.Tarefas.OrderBy(o => o.Nome).ToList())
                {
                    <partial name="partial/_Tarefa" model="tarefa" />
                }
            </ul>
            <div class="d-block">
                <button type="button" class="btn btn-info btn-block btn-sm" onclick="tarefa.getFormModal('@Url.Action("InsertTarefa","Tarefa", new { area = "Painel", listaId = Model.Id })')">
                    <i class="fas fa-plus"></i> Adicionar tarefa
                </button>
            </div>
        </section>
    </div>
</article>

